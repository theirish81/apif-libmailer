<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.3.xsd">

<context:component-scan base-package="com.apifortress.libs.mailer"/>
    <bean name="apifSender" class="com.apifortress.libs.mailer.senders.impl.ApifSmtpMailSender">
        <property name="apifSession" ref="apifSession"/>
    </bean>
    <bean name="apifSession" class="com.apifortress.libs.mailer.senders.impl.ApifSmtpSession">
        <property name="apifSmtpAuth" ref="apifSmtpAuth"/>
        <property name="apifProps" ref="apifProps"/>
    </bean>
    <bean name="apifSmtpAuth" class="com.apifortress.libs.mailer.senders.impl.ApifSmtpAuthenticator">
        <property name="user" value="user"/>
        <property name="password" value="password"/>
    </bean>
    <bean name="apifProps" class="com.apifortress.libs.mailer.config.impl.PropertiesApifMailSmtpConfig">
        <property name="filename" value="libmailer.properties"/>
    </bean>
</beans>